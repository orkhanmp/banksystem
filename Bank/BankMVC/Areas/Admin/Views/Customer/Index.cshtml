@using Entities.DTOs.CustomerDTOs
﻿@using Entities.TableModels
@model List<CustomerListDTO>

<h2>Customer List</h2>

<form asp-controller="Customer" asp-action="Search" method="get" style="margin-bottom: 20px;">
    <div class="form-group" style="display: flex; gap: 10px; align-items: center;">
        <label>Search By Id:</label>
        <input type="number" name="id" class="form-control" style="width: 200px;" placeholder="Please enter the Id" />
        <button type="submit" class="btn btn-primary">Search</button>
        <a asp-controller="Customer" asp-action="Index" class="btn btn-secondary">Show All</a>
    </div>
</form>

<hr />

<style>
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
        padding: 8px;
        text-align: left;
    }

    table {
        width: 100%;
    }

    th {
        background-color: #f2f2f2;
    }
</style>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th>City</th>            
            <th>Account Count</th>
            <th>Actions</th>
            
            
        </tr>
    </thead>

    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Age</td>
                    <td>@item.City</td>
                    <td>@(item.AccountCount)</td>
                    <td>
                        <a asp-controller="Customer" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-controller="Customer" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                   
                    <a asp-controller="Customer" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this customer?');">Delete</a>
                    </td>
                    
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" style="text-align: center;">No accounts found.</td>
            </tr>
        }
    </tbody>
</table>

<br />

<a asp-controller="Customer" asp-action="Add" class="btn btn-success">Add New Customer</a>
<a asp-controller="Account" asp-action="Index" class="btn btn-info">Back to Accounts</a>

