@using Entities.DTOs.CustomerDTOs
@model CustomerUpdateDTO

<h2>Edit Customer</h2>

<form asp-controller="Customer" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>First Name</label>
        <input type="text" asp-for="FirstName" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Last Name</label>
        <input type="text" asp-for="LastName" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Age</label>
        <input type="number" asp-for="Age" class="form-control" required min="0" max="150" />
    </div>

    <div class="form-group">
        <label>City</label>
        <input type="text" asp-for="City" class="form-control" required />
    </div>

    <br />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Customer" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@if (Model.Accounts != null && Model.Accounts.Any())
{
    <hr />
    <h4>Accounts for this Customer:</h4>
    <ul>
        @foreach (var account in Model.Accounts)
        {
            <li>@account.AccountNumber - @account.AccountType (@account.Balance)</li>
        }
    </ul>
}