@using Entities.DTOs.AccountDTOs
﻿@using Entities.TableModels
@model List<AccountListDTO>

<h2>Account List</h2>

<form asp-controller="Account" asp-action="Search" method="get" style="margin-bottom: 20px;">
    <div class="form-group" style="display: flex; gap: 10px; align-items: center;">
        <label>Search By Id:</label>
        <input type="number" name="id" class="form-control" style="width: 200px;" placeholder="Please enter the Id" />
        <button type="submit" class="btn btn-primary">Search</button>
        <a asp-controller="Account" asp-action="Index" class="btn btn-secondary">Show All</a>
    </div>
</form>

<hr />

<style>
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
        padding: 8px;
        text-align: left;
    }

    table {
        width: 100%;
    }

    th {
        background-color: #f2f2f2;
    }
</style>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Account Number</th>
            <th>Account Type</th>
            <th>Balance</th>
            <th>Account Holder</th>            
            
        </tr>
    </thead>

    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.AccountNumber</td>
                    <td>@item.AccountType</td>
                    <td>@item.Balance</td>
                    <td>@item.CustomerFullName</td>
                    
                    
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" style="text-align: center;">No accounts found.</td>
            </tr>
        }
    </tbody>
</table>

<br />


<a asp-controller="Customer" asp-action="Index" class="btn btn-info">Manage Customers</a>
